<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_config_inh11" model="ir.ui.view">
            <field name="name">mrp settings</field>
            <field name="model">mrp.days</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="0">
                    <field name="past_days"/>
                    <field name="future_days"/>
                </tree>
            </field>
        </record>

        <record id="view_mrp_config_form_inh11" model="ir.ui.view">
            <field name="name">mrp settings</field>
            <field name="model">mrp.days</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="past_days"/>
                            <field name="future_days"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
                
        <record id="action_mrp_days_configuration" model="ir.actions.act_window">
            <field name="name">Day Configure</field>
            <field name="res_model">mrp.days</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_mrp_days_config" name="Days Settings" parent="mrp.menu_mrp_configuration"
            sequence="1" action="action_mrp_days_configuration"/>
    
    </data>
</odoo>
